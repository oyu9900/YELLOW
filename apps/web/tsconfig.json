{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",

    "app/**/*.ts",
    "app/**/*.tsx",

    "components/**/*.ts",
    "components/**/*.tsx",

    "lib/**/*.ts",
    "lib/**/*.tsx",

    "../../tailwind.config.ts"
  ],
  "exclude": [
    "node_modules",
    "../../apps/api",
    "../../apps/api/**/*"
  ]
}

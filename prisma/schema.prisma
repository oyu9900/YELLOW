generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model YellowBookEntry {
  id         String  @id @default(cuid())
  fullName   String
  title      String
  email      String  @unique
  phone      String?
  department String
  city       String
  lat        Float?
  lng        Float?
  avatarUrl  String?
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         String   @default("user") // ⬅ enum биш, string
  createdAt    DateTime @default(now())
}

